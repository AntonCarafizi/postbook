{% extends 'base.html.twig' %}

{% block title %}{% trans %}all.users{% endtrans %}{% endblock %}

{% block body %}

    <h1>{% trans %}all.users{% endtrans %}</h1>
    <hr class="my-4">
    {% if users is not empty %}
    <div class="row">
        {% for user in users %}
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card my-3 mx-auto">
                {% if user.images %}
                <a href="{{ path('user_show', {'id': user.id, 'name': user.name|lower ~ '.' ~ user.surname|lower }) }}">
                    <img class="card-img-top rounded" src="{{ asset('media/image/' ~ user.images[0] ~ '.jpg')|imagine_filter('squared_thumbnail_small') }}" alt="Card image cap">
                </a>
                {% else %}
                <a href="{{ path('user_show', {'id': user.id, 'name': user.name|lower ~ '.' ~ user.surname|lower }) }}">
                    <img class="card-img-top" src="{{ asset('media/image/no_image.jpg')|imagine_filter('squared_thumbnail_small') }}" alt="Card image cap">
                </a>
                {% endif %}

                {{ include('template-parts/card-header.html.twig') }}

                <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% if user.description %}
                    <li class="list-group-item">
                        <p class="card-text">{{ user.description|striptags|slice(0, 50) }}
                            <a class="-external-link" href="{{ path('user_show', {'id': user.id, 'name': user.name|lower ~ '.' ~ user.surname|lower }) }}">[...]</a>
                        </p>
                    </li>
                    {% endif %}
                    <li class="list-group-item">{{ date('now').diff((date(user.birthDate))).format('%y') }} {% trans %}years.old{% endtrans %}</li>
                </ul>
                </div>

                {% if app.user %}
                    {{ include('template-parts/card-footer.html.twig') }}
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
    {% else %}
        <p class="card-text">{% trans %}no.records.found{% endtrans %}</p>
    {% endif %}
{% endblock %}
