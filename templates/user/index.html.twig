{% extends 'base.html.twig' %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}

    <h1>{{ title|trans }}</h1>
    <hr class="my-4">

    {% include 'template-parts/alert/user/index.html.twig' %}

    {% if users is not empty %}

    <div class="row">
        {% for user in users %}
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card my-3 mx-auto">
                {% include 'template-parts/card-img-top/user/index.html.twig' %}
                {% include 'template-parts/card-header/user/index.html.twig' %}
                {% include 'template-parts/card-body/user/index.html.twig' %}
                {% include 'template-parts/card-footer/user/index.html.twig' %}
            </div>
        </div>
        {% endfor %}
    </div>
        <hr class="my-4">
        {% include 'template-parts/pagination/user/index.html.twig' %}
    {% else %}
        <p class="card-text">{% trans %}no.records.found{% endtrans %}</p>
    {% endif %}
{% endblock %}
