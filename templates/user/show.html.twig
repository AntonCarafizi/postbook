{% extends 'base.html.twig' %}

{% block title %}{% trans %}user{% endtrans %} {{ user.id }}{% endblock %}

{% block body %}
    <h1>{% trans %}user{% endtrans %} {{ user.id }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="row">{% trans %}id{% endtrans %}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}name{% endtrans %}</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}surname{% endtrans %}</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}sex{% endtrans %}</th>
                <td>{{ user.isMale ==1 ? 'Male' : 'Female' }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}birthDate{% endtrans %}</th>
                <td>{{ user.birthDate|date("d M Y") }}</td>
            </tr>
            <tr>
                <th>{% trans %}email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_index') }}"><i class="fas fa-caret-left"></i> {% trans %}back.to.list{% endtrans %}</a>

    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i> {% trans %}edit{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
