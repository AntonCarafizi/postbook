<form method="post" action="{{ path('user_like_new', {'like': post.id}) }}">
    <input type="hidden" name="_method" value="POST">
    <input type="hidden" name="_token" value="{{ csrf_token('add_like' ~ post.id) }}">
    <button class="btn btn-link btn-sm">
        <i class="far fa-heart"></i> {% trans %}like{% endtrans %}
    </button>
</form>
