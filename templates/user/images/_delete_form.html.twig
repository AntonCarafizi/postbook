<form method="post" action="{{ path('image_delete', {'id': user.id, 'image': key}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_image' ~ key) }}">
    <button class="btn btn-link btn-sm text-light" title="Remove image" id="img-remove-{{ key }}" name="image-remove" value="{{ key }}">
        <i class="fas fa-times"></i>
    </button>
</form>
