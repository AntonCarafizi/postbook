<div class="dropdown-menu w-25" aria-labelledby="currentUserDropdown">
    <div class="list-group">
        <a class="list-group-item dropdown-item{% if app.request.get('_route') == 'my_profile' %} active{% endif %}" href="{{ path('my_profile') }}">
            <i class="fas fa-user"></i> {% trans %}my.profile{% endtrans %}
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'my_posts' %} active{% endif %}" href="{{ path('my_posts') }}">
            <div><i class="fas fa-file-alt"></i> {% trans %}my.posts{% endtrans %}</div>
            {% if app.user.posts and app.user.posts|length > 0 %}
                <span class="badge bg-primary rounded-pill ml-2">{{ app.user.posts|length }}</span>
            {% endif %}
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'my_visitors' %} active{% endif %}" href="{{ path('my_visitors') }}">
            <div><i class="fas fa-users"></i> {% trans %}my.visitors{% endtrans %}</div>
            {% if app.user.visitors %}
                {% if app.user.visitors|filter(v => v > app.user.visitorsLastChecked)|length > 0 %}
                <span id="new-visitor" class="badge bg-danger rounded-pill ml-2">+{{ app.user.visitors|filter(v => v > app.user.visitorsLastChecked)|length }}</span>
                {% endif %}
            {% endif %}
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'user_messages' %} active{% endif %}" href="#">
            <div><i class="fas fa-comment-dots"></i> {% trans %}my.messages{% endtrans %}</div>
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'my_friends' %} active{% endif %}" href="{{ path('my_friends') }}">
            <div><i class="fas fa-user-friends"></i> {% trans %}my.friends{% endtrans %}</div>
            {% if app.user.friends and app.user.friends|length > 0 %}
                <span class="badge bg-primary rounded-pill ml-2">{{ app.user.friends|length }}</span>
            {% endif %}
            {% if app.user.friendRequests and app.user.friendRequests|length > 0 %}
                <span id="new-friend" class="badge bg-danger rounded-pill ml-2">+{{ app.user.friendRequests|length }}</span>
            {% endif %}
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'my_favorites' %} active{% endif %}" href="{{ path('my_favorites') }}">
            <div><i class="fas fa-star"></i> {% trans %}my.favorites{% endtrans %}</div>
            {% if app.user.favorites and app.user.favorites|length > 0 %}
                <span class="badge bg-primary rounded-pill ml-2">{{ app.user.favorites|length }}</span>
            {% endif %}
        </a>
        <a class="list-group-item dropdown-item d-flex justify-content-between align-items-center{% if app.request.get('_route') == 'my_likes' %} active{% endif %}" href="{{ path('my_likes') }}">
            <div><i class="fas fa-heart"></i> {% trans %}my.likes{% endtrans %}</div>
            {% if app.user.likes and app.user.likes|length > 0 %}
                <span class="badge bg-primary rounded-pill ml-2">{{ app.user.likes|length }}</span>
            {% endif %}
        </a>
        <a class="list-group-item dropdown-item" href="{{ path('logout') }}">
            <i class="fas fa-sign-out-alt"></i> {% trans %}logout{% endtrans %}
        </a>
    </div>
</div>