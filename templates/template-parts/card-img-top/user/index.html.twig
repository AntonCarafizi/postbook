{% set avatar = (user.images['avatar'] is not null) ? user.images['avatar'] : 'no_image' %}
{% set user_show = (app.user is not null and app.user.id == user.id) ? path('my_profile') : path('user_show', {'id': user.id}) %}

{% if user.lastLogin %}
    {% if date('now').diff((date(user.lastLogin))).format('%h') == 0 and
    date('now').diff((date(user.lastLogin))).format('%i') <= app.session.metadataBag.getLifetime %}
        <span class="dot green position-absolute"></span>
    {% else %}
        <span class="dot grey position-absolute"></span>
    {% endif %}
{% endif %}

<a href="{{ user_show }}">
    <img class="card-img-top" src="{{ asset('media/image/' ~ avatar ~ '.jpg')|imagine_filter('squared_thumbnail_small') }}"
         alt="Card image cap"
         title="{{ user.firstname }} {{ user.lastname }}">
</a>