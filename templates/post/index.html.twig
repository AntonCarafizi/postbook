{% extends 'base.html.twig' %}

{% block title %}{% trans %}all.posts{% endtrans %}{% endblock %}

{% block body %}

    <h1>{% trans %}all.posts{% endtrans %}</h1>
    {% if posts %}
        {% for post in posts %}
            <div class="card my-3 mx-auto">
                <a class="card-header" href="{{ path('post_show', {'id': post.id}) }}">
                    <h3 class="card-link float-left">{{ post.title }}</h3>
                    <span class="card-subtitle float-right">{{ post.created ? post.created|date('F j, Y, g:i a') : '' }}</span><br>
                    <span class="card-subtitle float-right">{{ post.user.name }} {{ post.user.surname }}</span>
                </a>
                <div class="card-body">
                    <p class="card-text">{{ post.content }}</p>
                </div>
                <div class="card-footer d-flex justify-content-start">
                    <a class="btn btn-link" role="button" href="{{ path('post_edit', {'id': post.id}) }}">
                        <i class="far fa-edit"></i> {% trans %}edit{% endtrans %}
                    </a>
                    {{ include('post/_delete_form.html.twig') }}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="card-text">{% trans %}no.records.found{% endtrans %}</p>
    {% endif %}
    <div class="card my-3 mx-auto">
        <a class="btn btn-link" href="{{ path('post_new') }}"><i class="fas fa-plus"></i> {% trans %}new.post{% endtrans %}</a>
    </div>
{% endblock %}
