{% extends 'base.html.twig' %}

{% block title %}{% trans %}all.posts{% endtrans %}{% endblock %}

{% block body %}

    <h1>{% trans %}all.posts{% endtrans %}</h1>
    <hr class="my-4">
    {% if posts is not empty %}
        {% for post in posts %}
            {{ include('template-parts/post-card.html.twig') }}
        {% endfor %}
        <hr class="my-4">
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    {% else %}
        <p class="card-text">{% trans %}no.records.found{% endtrans %}</p>
    {% endif %}

    {% if app.request.get('_route') != 'user_likes' %}
    <div class="card my-4">
        <a class="btn btn-link" href="{{ path('post_new') }}"><i class="fas fa-plus"></i> {% trans %}new.post{% endtrans %}</a>
    </div>
    {% endif %}
{% endblock %}
